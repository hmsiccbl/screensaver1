        <!-- specify the properties (or xml) resource containing the localized messages, without a locale extension and without a file extension -->
        <property
          name="basename"
          value="classpath:messages" />
      </bean>
    </property>
    <aop:scoped-proxy/>
    <!--  TODO property name="locale" value=""/-->
  </bean>

